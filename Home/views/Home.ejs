<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product Showcase - Bootstrap Homepage</title>
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="/css/HomeStyle.css">



</head>
<body>

    <!-- Navigation -->
     <%- include("./Navbar")%>
    <!-- Hero Section -->
    <section class="hero-section text-center">
        <div class="container">
            <h1 class="display-4 fw-bold mb-4">Discover Amazing Products</h1>
            <p class="lead mb-4">Shop the latest trends and find exactly what you're looking for</p>
            <a href="#products" class="btn btn-light btn-lg px-4">Shop Now</a>
        </div>
    </section>
    <!-- Featured Categories -->
    <section class="py-5" name="Category">
        <div class="container">
            <h2 class="section-title">Shop by Category</h2>
            <div class="row g-4">
                <div class="col-md-3 col-sm-6">
                    <div class="card category-card text-center border-0">
                        <div class="card-body p-4">
                            <i class="fas fa-laptop fa-3x text-primary mb-3"></i>
                            <h5 class="card-title">Electronics</h5>
                            <p class="card-text">Latest gadgets and tech</p>
                            <button type="submit"  name="category" value="Electronics"  class="btn btn-outline-primary">Browse</button>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 col-sm-6">
                    <div class="card category-card text-center border-0">
                        <div class="card-body p-4">
                            <i class="fas fa-tshirt fa-3x text-primary mb-3"></i>
                            <h5 class="card-title">Fashion</h5>
                            <p class="card-text">Trendy clothes & accessories</p>
                            <button href="#" name="category" value="Fashion" type="submit" class="btn btn-outline-primary">Browse</button>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 col-sm-6">
                    <div class="card category-card text-center border-0">
                        <div class="card-body p-4">
                            <i class="fas fa-home fa-3x text-primary mb-3"></i>
                            <h5 class="card-title">Home & Garden</h5>
                            <p class="card-text">Everything for your home</p>
                            <button href="#" type="submit" name="category" value="HomeGarden" class="btn btn-outline-primary">Browse</button>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 col-sm-6">
                    <div class="card category-card text-center border-0">
                        <div class="card-body p-4">
                            <i class="fas fa-dumbbell fa-3x text-primary mb-3"></i>
                            <h5 class="card-title">Sports</h5>
                            <p class="card-text">Equipment & accessories</p>
                            <button type="submit" name="category" value="Sports" href="#" class="btn btn-outline-primary">Browse</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Featured Products -->
    <section id="products" class="py-5 bg-light">
        <div class="container">
            <h2 class="section-title">Featured Products</h2>
            <div class="row g-4">
                <!-- Product 1 -->
                 <% products.forEach(product => { %>
     <div class="col-lg-3 col-md-4 col-sm-6">
                    <div class="card product-card">
                        <% if (product.productNew) { %>
                          <span class="badge bg-success category-badge">New</span>
                        <% } %>
                        <img src=" <%=product.productImagePath.slice(11,product.productImagePath.length) %>" class="card-img-top product-img" alt="Product 1">

                        <div class="card-body">
                            <h5 class="card-title"><%= product.productName %></h5>
                            <p class="card-text"><%= product.productDescription %></p>
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="price">$<%= product.productPrice %></span>
                                <a href="#" class="btn btn-primary">
                                    <i class="fas fa-cart-plus me-1"></i> Add to Cart
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                <% }) %>

                <!-- Product 2 -->
                <div class="col-lg-3 col-md-4 col-sm-6">
                    <div class="card product-card">
                        <span class="badge bg-danger category-badge">Sale</span>
                        <img src="https://images.unsplash.com/photo-1523275335684-37898b6baf30?ixlib=rb-1.2.1&auto=format&fit=crop&w=500&q=60" class="card-img-top product-img" alt="Product 2">
                        <div class="card-body">
                            <h5 class="card-title">Smart Watch</h5>
                            <p class="card-text">Track your fitness and stay connected</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="price"><del class="text-muted">199.99</del> $149.99</span>
                                <a href="#" class="btn btn-primary">
                                    <i class="fas fa-cart-plus me-1"></i> Add to Cart
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
             

    <!-- Features Section -->
    <section class="py-5">
        <div class="container">
            <h2 class="section-title text-center">Why Shop With Us</h2>
            <div class="row g-4 mt-3">
                <div class="col-md-4 text-center">
                    <div class="feature-icon">
                        <i class="fas fa-shipping-fast"></i>
                    </div>
                    <h4>Free Shipping</h4>
                    <p>Free shipping on all orders over $50. Fast delivery to your doorstep.</p>
                </div>
                <div class="col-md-4 text-center">
                    <div class="feature-icon">
                        <i class="fas fa-undo-alt"></i>
                    </div>
                    <h4>Easy Returns</h4>
                    <p>Not satisfied? Return within 30 days for a full refund, no questions asked.</p>
                </div>
                <div class="col-md-4 text-center">
                    <div class="feature-icon">
                        <i class="fas fa-lock"></i>
                    </div>
                    <h4>Secure Payment</h4>
                    <p>Your payment information is safe with our encrypted checkout process.</p>
                </div>
            </div>
        </div>
    </section>

    <!-- Newsletter Section -->
    <section class="newsletter-section py-5">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-8 text-center">
                    <h3>Subscribe to Our Newsletter</h3>
                    <p class="mb-4">Get the latest updates on new products and upcoming sales</p>
                    <form class="row g-2 justify-content-center">
                        <div class="col-sm-8">
                            <input type="email" class="form-control form-control-lg" placeholder="Your email address">
                        </div>
                        <div class="col-sm-auto">
                            <button type="submit" class="btn btn-primary btn-lg w-100">Subscribe</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <%- include("./Footer") %>

    <!-- Bootstrap JS Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="js/HomeScript.js"></script>
</body>
</html>
